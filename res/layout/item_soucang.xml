<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:background="@color/red_f27e17"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="商品品牌："
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView5"
            android:text="商品名称："
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView6"
            android:text="产品型号："
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/projectType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="projectType"
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="projectName"
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_toLeftOf="@+id/projectType"
            android:text="参考报价："
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/projectOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="projectOrder"
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/cankaoprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView01"
            android:layout_alignBottom="@+id/TextView01"
            android:layout_toLeftOf="@+id/joinorder"
            android:layout_toRightOf="@+id/TextView01"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="cankaoprice"
            android:textColor="@color/hei_515151" />

        <TextView
            android:id="@+id/joinorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cankaoprice"
            android:layout_alignBottom="@+id/cankaoprice"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@color/red_f27e17"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="13sp"
            android:text="加入订单" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/projectOrder"
            android:layout_alignBottom="@+id/projectOrder"
            android:layout_alignParentRight="true"
            android:textColor="@color/red_f27e17"
            android:layout_marginRight="5dp"
            android:text="❤" />

    </RelativeLayout>

</LinearLayout>