<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <LinearLayout
        android:id="@+id/tab_linlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/unuse"
            style="@style/bottomtext"
            android:text="未使用的红包" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E8E8E8" />

        <TextView
            android:id="@+id/overdue"
            style="@style/bottomtext"
            android:text="已过期的红包" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cusor_bak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fffcf8" >

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="30dp"
            android:layout_height="3.0dp"
            android:scaleType="matrix"
            android:src="@color/color_main_title" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelay_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>