<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参考报价："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cankaobaojia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_f27e17"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menchuang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门或者窗："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/menchuang_men"
            style="@style/project"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="　门　" />

        <TextView
            android:id="@+id/menchuang_chuang"
            style="@style/project"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="　窗　" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玻璃材质："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/caizhi_putong"
            style="@style/project"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="普通钢化" />

        <TextView
            android:id="@+id/caizhi_LOW_E"
            style="@style/project"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="LOW-E玻璃" />

        <TextView
            android:id="@+id/caizhi_dumo"
            style="@style/project"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="镀膜玻璃" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玻璃规格："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/guige_595"
            style="@style/project"
            android:layout_marginLeft="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="5+9+5" />

        <TextView
            android:id="@+id/guige_696"
            style="@style/project"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="6+9+6" />

        <TextView
            android:id="@+id/guige_6126"
            style="@style/project"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="6+12+6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/color_hhl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_hhl"
            android:gravity="center"
            android:text="黄花梨"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_ytm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_ytm"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="樱桃木"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_jxm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_jxm"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="金橡木"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_sql"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="水曲柳"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_hsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_hsm"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="红酸枝"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色："
            android:textColor="@android:color/transparent" />

        <TextView
            android:id="@+id/color_fss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_fss"
            android:gravity="center"
            android:text="灰色砂"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_kfy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_kfy"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="咖啡银"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_ft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_ft"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="氟碳"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_sgy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_sgy"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="闪光银"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/color_4d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/color_4d"
            android:paddingLeft="3dp"
            android:text="4D木纹"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="温馨提示：商品单价会随着您选择的不同商品属性而发生变化哦！"
        android:textColor="@color/red_f27e17" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/huise_C8C8C8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/joinOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_white"
            android:gravity="center"
            android:padding="8dp"
            android:text="加入订单" />

        <TextView
            android:id="@+id/joinSouCang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/red_f27e17"
            android:gravity="center"
            android:padding="8dp"
            android:text="加入收藏" />

        <TextView
            android:id="@+id/fujinmendian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#67bff2"
            android:gravity="center"
            android:padding="8dp"
            android:text="附近门店" />
    </LinearLayout>

</LinearLayout>