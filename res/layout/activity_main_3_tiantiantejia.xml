<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/readine"
        android:gravity="center"
        android:text="@string/tiantiantejia"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/autoscroll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <com.wlj.ob.ObserversImageView
            android:id="@+id/tttj_120"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="false" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <com.wlj.ob.ObserversImageView
            android:id="@+id/tttj_190"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <com.wlj.ob.ObserversImageView
            android:id="@+id/tttj_tuila80"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="false" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <com.wlj.ob.ObserversImageView
            android:id="@+id/tttj_erheyi65"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="false" />
    </LinearLayout>

</LinearLayout>