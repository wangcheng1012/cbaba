<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同编号：" />

        <EditText
            android:id="@+id/hetongNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txtborder"
            android:ems="10"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同金额：" />

        <EditText
            android:id="@+id/hetongMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txtborder"
            android:hint="0.00元"
            android:ems="10"
            android:digits="0123456789."
            android:padding="5dp" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：" />

        <TextView
            android:id="@+id/orderNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="　　拍照：" />

        <ImageView
            android:id="@+id/Photograph"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:src="@drawable/paizhao" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/suoyuetu" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同备注：" />

        <EditText
            android:id="@+id/beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txtborder"
            android:ems="10"
            android:gravity="left|top"
            android:minLines="3"
            android:padding="5dp" >

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/upload"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/red_f27e17"
        android:text="上　　传"
        android:textColor="@color/white" />

</LinearLayout>