<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bottomtext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="activity_main_shangdaohang_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="activity_main_4_tuijianshangpin_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="fenlei_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/huise_F2F2F2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="dailishangguanli_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="widget_listview">
        <item name="android:layout_width">match_parent</item>
   		<item name="android:layout_height">match_parent</item>
       	<item name="android:layout_weight">1</item>      	
       	<item name="android:listSelector">@drawable/listview_item_selector</item>
       	<item name="android:divider">@drawable/listview_divider_line</item>
       	<item name="android:dividerHeight">1.0dip</item>
       	<item name="android:fadingEdge">none</item>
       	<item name="android:scrollingCache">false</item>
    </style>
    
    <style name="project">
        <item name="android:layout_width">wrap_content</item>
   		<item name="android:layout_height">wrap_content</item>
       	<item name="android:background">@drawable/hui_white</item>
       	<item name="android:paddingLeft">15dp</item>
       	<item name="android:paddingRight">15dp</item>
       	<item name="android:paddingTop">5dp</item>
       	<item name="android:paddingBottom">5dp</item>
       	<item name="android:textColor">@color/hei_515151</item>
       	<item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>